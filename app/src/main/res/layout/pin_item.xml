<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoauthor"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:id="@+id/photodate" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoauthor"
            android:layout_alignTop="@+id/photopic"
            android:layout_alignLeft="@+id/photodate"
            android:layout_alignStart="@+id/photodate" />

        <TextView
            android:text="photomemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/photopic"
            android:layout_alignStart="@+id/photopic"
            android:id="@+id/photomemo" />

        <ImageButton
            android:layout_width="50dp"
            app:srcCompat="@mipmap/pin"
            android:id="@+id/pinphoto"
            android:scaleType="centerCrop"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/no_pic"
            android:id="@+id/photopic"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pinphoto"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="11dp"
            android:layout_above="@+id/photomemo"
            android:layout_width="220dp" />
    </RelativeLayout>
</LinearLayout>