<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_type"
        android:text="itemtype"
        android:layout_marginEnd="114dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemtitle"
        android:text="itemtitle"
        android:layout_marginStart="33dp"
        android:layout_alignBaseline="@+id/item_type"
        android:layout_alignBottom="@+id/item_type"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkdate"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/item_type"
        android:layout_alignStart="@+id/item_type" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtclass"
        android:layout_alignBaseline="@+id/checkdate"
        android:layout_alignBottom="@+id/checkdate"
        android:layout_alignStart="@+id/itemtitle" />
</RelativeLayout>