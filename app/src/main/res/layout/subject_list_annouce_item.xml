<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/promptannoucepeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:id="@+id/textView19" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView19"
        android:layout_toRightOf="@+id/textView19"
        android:layout_toEndOf="@+id/textView19"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:id="@+id/txtAnnouceauthor"
        android:textColor="@color/plus" />

    <TextView
        android:text="@string/promptannoucetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtAnnouceauthor"
        android:layout_toRightOf="@+id/txtAnnouceauthor"
        android:layout_toEndOf="@+id/txtAnnouceauthor"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:id="@+id/textView23" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView23"
        android:layout_toRightOf="@+id/textView23"
        android:layout_toEndOf="@+id/textView23"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/txtAnnoucetime"
        android:textColor="@color/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:textColor="?attr/colorPrimaryDark"
        android:id="@+id/txtAnnoucebody" />
</RelativeLayout>